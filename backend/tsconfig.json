{
    "compilerOptions": {
			"emitDecoratorMetadata": true,
			"experimentalDecorators": true,
      "target": "es2017",
      "module": "commonjs",
      "outDir": "dist/js",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": false,
			"strictPropertyInitialization": false
    },
    "include": ["src/*/*"],
    "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
} 